// Por ejemplo, después de "Premium" o antes de "Salir"

<button
  onClick={() => onNavigate("eventos")}
  className="menu-item"
>
  <Calendar size={20} />
  <span>Eventos</span>
</button>

<button
  onClick={() => onNavigate("validacion")}
  className="menu-item"
>
  <Shield size={20} />
  <span>Validación</span>
</button>

<button
  onClick={() => onNavigate("admin")}
  className="menu-item"
>
  <Settings size={20} />
  <span>Admin</span>
</button>
